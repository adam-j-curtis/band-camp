<h1 class="dummy">Ruby User Dummy Show Page</h1>

  <h2 class="teacher-name"><%= @user.full_name_first %></h2>
  <h3>Your students:</h3>
  <% ordered_students = @students.sort_by { |student| student.last_name} %>
  <% ordered_students.each do |student| %>
    <h3 class="student-name"><%= link_to student.full_name_last, student_path(student) %></h3>

  <% end %>
